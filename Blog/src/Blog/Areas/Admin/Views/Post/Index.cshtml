@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject Microsoft.ApplicationInsights.Extensibility.TelemetryConfiguration TelemetryConfiguration

@{
    ViewData["Title"] = "Posts list";
}

@{
    Layout = "_Layout";
}

<header class="intro-header" style="background-image: url('/images/home-bg-2.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-lg-offset-0 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Posts</h1>
                    <p>
                        <a asp-area="" asp-controller="Post" asp-action="Create" class="btn btn-primary"> <i class="glyphicon glyphicon-plus"></i> Add new post</a>
                    </p>
                    <div id="example">
                        <div id="grid"></div>
                        <script>
                            $(document).ready(function () {
                                $("#grid").kendoGrid({
                                    dataSource: {
                                        type: "json",
                                        transport: {
                                            read: {
                                                url: "@Html.Raw(Url.Action("PostList", "Post", new {Area = ""}))",
                                                type: "POST",
                                                dataType: "json"
                                            }
                                        },
                                        schema: {
                                            data: "data",
                                            total: "total",
                                            errors: "errors"
                                        },
                                        serverPaging: true,
                                        serverFiltering: true,
                                        serverSorting: true,
                                        pageSize: 5
                                    },
                                    height: 550,
                                    groupable: true,
                                    sortable: true,
                                    pageable: {
                                        refresh: true,
                                        pageSizes: true,
                                        buttonCount: 5
                                    },
                                    columns: [{
                                        field: "title",
                                        title: "Title",
                                        template: '<a href="Admin/Post/FullPost/#=id#">#=title#</a>',
                                        width: 30
                                    }, {
                                        field: "date",
                                        title: "Date of publish",
                                        width: 30
                                    } @if (User.IsInRole("admin"))
                                      {
                                          <text>, {
                                        field: "id",
                                        title: "Actions",
                                        width: 30,
                                        headerAttributes:
                                        {
                                            style:
                                                "text-align:center"
                                        },
                                        attributes:
                                        {
                                            style:
                                                "text-align:center"
                                        },
                                        template:
                                            '<a class="btn btn-info" href="Admin/Post/Edit/#=id#"><i class="glyphicon glyphicon-pencil"></i>Edit</a>' +
                                                ' <a class="btn btn-danger" href="Admin/Post/Delete/#=id#"><i class="glyphicon glyphicon-trash"></i>Delete</a>'
                                    } </text>
                                      }]
                                });
                            });
                        </script>
                        <style type="text/css">
                            .post-name {
                                display: inline-block;
                                vertical-align: middle;
                                line-height: 32px;
                                padding-left: 3px;
                            }
                        </style>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>