@model Blog.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "User Profile Edit";
}

<header class="intro-header" style="background-image: url('/images/edit-user-bg.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="page-heading">
                    <h1>Edit Profile</h1>
                    <form asp-action="Edit" asp-controller="UserProfile">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <input type="hidden" asp-for="UserId" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label">Email</label>
                            <input type="text" asp-for="Email" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Login" class="control-label">Login</label>
                            <input type="text" asp-for="Login" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="OldPassword" class="control-label">Old password</label>
                            <input type="text" asp-for="OldPassword" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="NewPassword" class="control-label">New password</label>
                            <input type="text" asp-for="NewPassword" class="form-control" />
                        </div>
                        <span class="subheading">Click "Save" to save changings. You will be logged out and should log in again with new login information</span>
                        <hr class="small">
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</header>