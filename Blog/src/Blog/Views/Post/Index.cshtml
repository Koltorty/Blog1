@model IEnumerable<Blog.Models.Post>
@{
    ViewData["Title"] = "Posts list";
}

<header class="intro-header" style="background-image: url('/images/home-bg-2.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Posts</h1>
                </div>
            </div>
        </div>
    </div>
</header>

@foreach (var post in Model)
{
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-preview">
                    <a asp-area="" asp-controller="Post" asp-action="FullPost" asp-route-id="@post.Id">
                        <h2 class="post-title">
                            @post.Title
                        </h2>
                    </a>
                    <p class="post-meta">Posted on @post.Date</p>
                </div>
                <hr>
            </div>
        </div>
    </div>
}