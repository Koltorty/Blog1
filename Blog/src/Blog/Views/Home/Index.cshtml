<title>My blog</title>

<header class="intro-header" style="background-image: url('/images/home-bg-2.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Welcome to my blog</h1>
                    <hr class="small">
                    @if (User.IsInRole("admin"))
                    {
                        <span class="subheading">Click <a asp-route-area="Admin" asp-controller="Post" asp-action="Index">here</a> to see all posts</span>
                    }
                    else
                    {
                        <span class="subheading">Click <a asp-action="Index" asp-controller="Post">here</a> to see all posts</span>
                    }
                </div>
            </div>
        </div>
    </div>
</header>
